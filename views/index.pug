extends templates/layout
block content
    div.row
        div.col-12.col-md-4
            div.card.border-primary
                div.card-header
                    h4 Create a New User
                div.card-body
                    form(method="post" action="/api/user" class="form-horizontal")
                        div.form-group
                            code POST /api/user

                        div.form-group
                            input(name="username" type="text" class="form-control" placeholder="username" )
                        div.form-group
                            button(type="submit" class="btn btn-primary btn-block") submit
        div.col-12.col-md-4
            div.card.border-primary
                div.card-header
                    h5 Create a new excercise
                div.card-body
                    form(method="post" action="/api/exercise" class="form-horizontal")
                        div.form-group
                            code POST /api/exercise
                        div.form-group
                            input(name="_id" type="text" class="form-control" placeholder="user id" )
                        div.form-group
                            input(name="description" type="text" class="form-control" placeholder="description" )
                        div.form-group
                            input(name="duration" type="number" class="form-control from-control-sm" placeholder="duration (minutes)" )
                        div.form-group
                            input(name="date" type="date" class="form-control from-control-sm" placeholder="date (yyyy-mm-dd)" )
                        div.form-group
                            button(type="submit" class="btn btn-primary btn-block") submit