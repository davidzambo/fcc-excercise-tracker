extends templates/layout
block content
    div.row
        div.col-12.col-md-4
            h1 title #{title}
            h4 Create a New User
            form(
                id="user"
                method="post"
                action="/api/user"
                class="form-horizontal")
                div.form-group
                    code POST /api/user

                div.form-group
                    input(
                        name="username"
                        type="text"
                        placeholder="username"
                        class="form-control"
                        required)
                div.form-group
                    button(
                        type="submit"
                        class="btn btn-primary") submit